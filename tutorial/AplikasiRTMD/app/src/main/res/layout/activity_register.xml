<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Logres.RegisterActivity">


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/kuning"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_lock_black_24dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomer Induk Kependudukan"
                        android:layout_marginLeft="5sp"
                        android:textColorHint="@color/Black"
                        android:textSize="18sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/kuning"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:backgroundTint="@color/Black"
                        android:background="@drawable/ic_lock_black_24dp"/>
                    <EditText
                        android:id="@+id/et_elupapass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomer HP"
                        android:layout_marginLeft="5sp"
                        android:textColorHint="@color/Black"
                        android:textSize="18sp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/Black"
                        android:backgroundTint="@color/white"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="Simpan"/>


    </LinearLayout>

</LinearLayout>