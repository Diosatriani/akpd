<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_marginLeft="3dp"-->
        <!--android:layout_marginRight="3dp"-->
        <!--android:layout_marginBottom="6dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/tentang_paragraf_1"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginTop="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0B75A5"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:text="STRUKTUR ORGANISASI"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="start"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/tentang_paragraf_1"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="16sp" />



            </LinearLayout>
        </ScrollView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_kontak_pengurus_rt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:padding="12dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="52dp"
            app:cardBackgroundColor="@color/colorPrimary1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@android:color/transparent">


                <TextView
                    android:id="@+id/tv_spmkontak"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Kontak Pengurus RT"
                    android:textSize="28dp"
                    android:textColor="#130B0B"/>
                <ImageView
                    android:layout_marginLeft="75dp"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ic_menu_send"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>