<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabs_menu"
        android:layout_marginBottom="4dp"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/Base.Theme.AppCompat">

    </android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_potop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-55dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="18dp"
        app:civ_border_color="@color/white"
        android:layout_gravity="right"
        android:backgroundTint="@color/Black"
        android:background="@drawable/ic_mood_black_24dp" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/kuning"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_cs_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28dp"
                android:text="Customer Service" />

            </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/kuning">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_spm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="28dp"
                android:text="SPM Biasa" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/kuning"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_marginTop="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <CheckBox
                        android:id="@+id/cb_spm_kontrak"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="28dp"
                        android:text="SPM Express" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kuning"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_skpp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SPM Gaji"
                android:textSize="28sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kuning"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_sp2d"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SP2D / Surat"
                android:textSize="28sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kuning"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_sktb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Konfirmasi"
                android:textSize="28sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/kuning"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <CheckBox
                android:id="@+id/cb_cso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rekonsiliasi"
                android:textSize="28sp"/>
        </LinearLayout>
        </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp">
                        <Button
                            android:layout_gravity="center"
                            android:id="@+id/btn_lanjut"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="Lanjut" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/btn_pesan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:text="Daftar Booking" />
                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</LinearLayout>