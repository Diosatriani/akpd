<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/colorPrimary"
    tools:context=".guru.TambahActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:background="@drawable/create"
            android:layout_marginBottom="10dp"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_person_pin_black_24dp"/>
                <EditText
                    android:id="@+id/et_nis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIS Siswa"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_account_circle_black_24dp"/>
                <EditText
                    android:id="@+id/et_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Siswa"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_add_location_black_24dp"/>
                <EditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Siswa"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:backgroundTint="@color/Black"
                    android:background="@drawable/ic_phone_iphone_black_24dp"/>
                <EditText
                    android:id="@+id/et_telpon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telfon Siswa"
                    android:layout_marginLeft="5sp"
                    android:textColorHint="@color/Black"
                    android:textSize="18sp"
                    android:inputType="textPersonName"
                    android:textColor="@color/Black"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp">
            <Button
                android:id="@+id/btn_simpanCreate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="Simpan"/>

        </android.support.v7.widget.CardView>


    </LinearLayout>

</LinearLayout>